<Window x:Class="BerlinClock.WPF.Views.BerlinClockView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BerlinClock.WPF.Views"
        mc:Ignorable="d"
        Title="BerlinClockView" Height="350" Width="525">
    <Grid>
        <StackPanel>
            <Label Content="{Binding TheTime}" />
            <Label Content="{Binding Counter}" />
            <TextBlock Name="DateText"></TextBlock>
        </StackPanel>
    </Grid>
</Window>